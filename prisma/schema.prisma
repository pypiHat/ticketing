
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  // order model
  id                 String     @id @default(uuid())
  ticket_id          String
  user_id            String
  count              Int
  total_price        Float
  status             String
  registration_date  DateTime
  ticket             Ticket     @relation(fields: [ticket_id], references: [id])
  user               User       @relation(fields: [user_id], references: [id])
}

model Ticket {
  // ticket model
  id                String     @id @default(uuid())
  from_location     String
  to_location       String
  arrival_date      DateTime
  departure_date    DateTime
  unit_price        Float
  count             Int
  orders            Order[]
}

model User {
  // user model
  id                String     @id @default(uuid())
  fname             String
  lname             String
  avatar_url        String?
  registration_date DateTime?
  phone             String
  birthday          DateTime?
  password          String
  orders            Order[]
}